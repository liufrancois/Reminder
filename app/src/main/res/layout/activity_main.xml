<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3E3C3C">

    <ImageButton
        android:id="@+id/appStop"
        android:layout_width="58dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="297dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="25dp"
        android:background="#00FFFFFF"
        android:contentDescription="Déconnexion"
        android:hint="Déconnexion"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logout_1370553"
        tools:srcCompat="@drawable/logout_1370553" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="75dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="577dp"
        android:layout_marginEnd="306dp"
        android:layout_marginBottom="17dp"
        android:background="#00FFFFFF"
        android:contentDescription="TODO"
        android:scaleType="centerInside"
        android:src="@drawable/img"
        tools:src="@drawable/img" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif"
        android:text="Reminder"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#8FD8EA"
        android:textSize="45sp"
        android:textStyle="normal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gridList"
        android:layout_width="wrap_content"
        android:layout_height="404dp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="175dp"
        android:contentDescription="Liste des éléments"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:itemCount="10"
        tools:listitem="@layout/item_2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/gridList"
        android:layout_alignTop="@+id/gridList"
        android:layout_alignEnd="@+id/gridList"
        android:layout_alignBottom="@+id/gridList"
        android:layout_centerInParent="true"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="-46dp"
        android:layout_marginEnd="-17dp"
        android:layout_marginBottom="-33dp"
        android:foreground="@drawable/bordure" />

</RelativeLayout>